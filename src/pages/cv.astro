---
import BaseLayout from '../layouts/BaseLayout.astro';
---

<BaseLayout title="CV | Conscious Form">
  <section class="max-w-4xl mx-auto px-4 py-16">
    
    <div class="flex flex-col sm:flex-row justify-between items-start gap-4 mb-8">
      <h1 class="text-4xl font-bold">Curriculum Vitae</h1>
      <div class="flex gap-3">
        <a 
          href="/documents/cv.pdf" 
          download
          class="text-sm text-neutral-400 hover:text-white border border-neutral-700 px-4 py-2 rounded hover:border-neutral-500 transition-colors"
        >
          Download CV
        </a>
      </div>
    </div>

    <p class="text-neutral-400 mb-8">
      For the most up-to-date and fully formatted version, please download the PDF above.
    </p>

    {/* Embedded PDF viewer */}
    <div class="w-full aspect-[8.5/11] bg-neutral-900 rounded-lg overflow-hidden border border-neutral-800">
      <iframe 
        src="/documents/cv.pdf" 
        class="w-full h-full"
        title="Curriculum Vitae"
      />
    </div>

  </section>
</BaseLayout>