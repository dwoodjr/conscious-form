---
const navLinks = [
  { href: '/', label: 'Home' },
  { href: '/projects', label: 'Projects' },
  { href: '/about', label: 'About' },
  { href: '/cv', label: 'CV' },
];

const currentPath = Astro.url.pathname;
---

<header class="border-b border-neutral-800">
  <nav class="max-w-4xl mx-auto px-4 py-4 flex justify-between items-center">
    <a href="/" class="text-xl font-bold hover:text-neutral-300 transition-colors">
      Conscious Form
    </a>
    
    <ul class="flex gap-6">
      {navLinks.map(link => (
        <li>
          <a 
            href={link.href}
            class:list={[
              'hover:text-neutral-300 transition-colors',
              currentPath === link.href ? 'text-white' : 'text-neutral-400'
            ]}
          >
            {link.label}
          </a>
        </li>
      ))}
    </ul>
  </nav>
</header>